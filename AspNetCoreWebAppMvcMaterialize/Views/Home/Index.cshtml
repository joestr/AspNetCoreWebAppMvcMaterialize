@{
    ViewData["Title"] = "Home Page";
    Layout = "_LayoutWavesCentered";
}

<div class="row">
    <div class="col s12">
        <div class="card p-auto">
            <div class="card-content">
                <span class="card-title"><b>Application</b></span>
                <p class="pb-4">Generic Application</p>
                <hr/>
                <form name="LegacyKeyLoginForm" class="pt-4">
                    <div class="input-field outlined pb-2">
                        <div class="prefix"><i class="material-symbols-outlined">key_vertical</i></div>
                        <input id="InputKey" type="text">
                        <label for="InputKey">Access key</label>
                    </div>
                    <input id="InputSubmit" type="submit" class="btn btn-small"/>
                </form>
            </div>
        </div>
    </div>
</div>
